import java.awt.Component;
import java.awt.Dimension;
import java.util.ArrayList;
import java.util.HashMap;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JScrollPane;

import org.knowm.xchart.*;
import org.knowm.xchart.internal.chartpart.Chart;
/*
 * In this class, we will run the project. 
 */
public class ProjectRunner {
	
	//Instance Variables
	ArrayList<Chart> charts = new ArrayList<>();
	
	ReadingLevelAndDensityChart bm = new ReadingLevelAndDensityChart();
	CategoryChart zChart = bm.makeZChart();
	CategoryChart readingLevel = bm.makeAvgsChart("Reading Level ");
	CategoryChart densityChart = bm.makeAvgsChart("Density ");

	private String windowTitle;
	
	
	public ProjectRunner() {
		
	}
	
	
	public void makeChartMatrix() {
		
		
		charts.add(zChart);
		charts.add(readingLevel);
		charts.add(densityChart);
		charts.add(zChart);
		charts.add(readingLevel);
		charts.add(densityChart);
		
		
		XChartPanel<Chart> fram2 = new SwingWrapper<Chart>(zChart).getXChartPanel()
		JPanel panel = new JPanel();

		// add something to you panel...
		
		panel.add(fram2);
		panel.add(fram2);

		// add the panel to a JScrollPane
		JScrollPane jScrollPane = new JScrollPane(panel);
		// only a configuration to the jScrollPane...
		jScrollPane.setVerticalScrollBarPolicy(JScrollPane.VERTICAL_SCROLLBAR_ALWAYS);
		jScrollPane.setHorizontalScrollBarPolicy(JScrollPane.HORIZONTAL_SCROLLBAR_AS_NEEDED);

		// Then, add the jScrollPane to your frame
		fram2.getRootPane().add(jScrollPane);
		
		//new SwingWrapper<Chart>(charts).displayChartMatrix();
		//new SwingWrapper<Chart>(charts).displayChart();
		
		
		//JFrame frame = new SwingWrapper<Chart>(charts, 6, 1).displayChartMatrix();
		//Dimension preferredSize = new Dimension(1920, 1000);
		//frame.setPreferredSize(preferredSize);
		
		
	}
	
	
	
	
	
	
	
	public static void main(String[] args) {
	
		ProjectRunner pr = new ProjectRunner();
		pr.makeChartMatrix();
		
	}

}
